<component type="desktop-application">
  <id>org.lingmo.Appstore.desktop</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-or-later</project_license>
  <name>Appstore</name>
  <summary>Install and update apps</summary>
  <description>
    <p>
      Appstore allows you to find and install new apps and system
      extensions and remove existing installed apps.
    </p>
    <p>
      Appstore showcases featured and popular apps with useful
      descriptions and multiple screenshots per app.
      Apps can be found either through browsing the list of categories
      or by searching.
      It also allows you to update your system using an offline update.
    </p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-overview.png</image>
      <caption>Overview panel</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-details.png</image>
      <caption>Details panel</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-details2.png</image>
      <caption>Details panel</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-installed.png</image>
      <caption>Installed panel</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-up-to-date.png</image>
      <caption>Updates panel</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-updates.png</image>
      <caption>Updates panel</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/LingmoOS/lingmo-appstore/raw/HEAD/data/metainfo/ss-updates-details.png</image>
      <caption>The update details</caption>
    </screenshot>
  </screenshots>

  <recommends>
    <!-- Works on desktops or touchscreen devices -->
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </recommends>

  <requires>
    <!-- Adaptive -->
    <display_length compare="ge">360</display_length>
  </requires>

  <!--
   Validate with `appstreamcli validate *.metainfo.xml`
  -->
  <releases>
    <release date="2024-08-18" version="0.5" type="stable">
      <description>
        <p>First Version</p>
        <ul>
          <li>Correct broken formatting when using &lt;code&gt; in AppStream metadata</li>
        </ul>
      </description>
    </release>
  </releases>
  <provides>
    <id>lingmo-appstore.desktop</id>
  </provides>
  <kudos>
    <kudo>HiDpiIcon</kudo>
    <kudo>ModernToolkit</kudo>
    <kudo>Notifications</kudo>
    <kudo>SearchProvider</kudo>
  </kudos>
  <url type="bugtracker">https://github.com/LingmoOS/lingmo-appstore/-/issues</url>
  <url type="contribute">https://welcome.lingmo.org/app/Appstore/</url>
  <url type="donation">https://www.lingmo.org/donate/</url>
  <url type="homepage">https://apps.lingmo.org/Appstore</url>
  <url type="translate">https://l10n.lingmo.org/module/lingmo-appstore/</url>
  <url type="vcs-browser">https://github.com/LingmoOS/lingmo-appstore/</url>
  <update_contact>richard_at_hughsie.com</update_contact>
  <compulsory_for_desktop>LINGMO</compulsory_for_desktop>
  <project_group>LINGMO</project_group>
  <translation type="gettext">lingmo-appstore</translation>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
